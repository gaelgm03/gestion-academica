# ============================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# Sistema de Gestión Académica
# ============================================================

# ============================================================
# BASE DE DATOS
# ============================================================
DB_HOST=localhost
DB_NAME=gestion_academica
DB_USER=root
DB_PASS=

# ============================================================
# AUTENTICACIÓN LDAP
# ============================================================
LDAP_HOST=ldap://tu-servidor-ldap
LDAP_PORT=389
LDAP_BASE_DN=dc=universidad,dc=edu,dc=mx
LDAP_ADMIN_DN=cn=admin,dc=universidad,dc=edu,dc=mx
LDAP_ADMIN_PASS=

# ============================================================
# SEGURIDAD JWT
# ============================================================
JWT_SECRET=tu_secreto_seguro_aqui_cambialo_en_produccion
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================================
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=America/Mexico_City

# ============================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================
CORS_ALLOWED_ORIGINS=http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ============================================================
# LOGS Y ERROR REPORTING
# ============================================================
LOG_LEVEL=debug
LOG_PATH=../logs/app.log
ERROR_REPORTING=E_ALL

# ============================================================
# CONFIGURACIÓN DE SESIONES
# ============================================================
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# ============================================================
# EMAIL (Opcional - para notificaciones)
# ============================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@universidad.edu.mx
MAIL_FROM_NAME=Sistema Gestión Académica
